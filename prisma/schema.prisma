generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Blog {
  id        Int    @id @default(autoincrement())
  title     String
  paragraph String
  image     String
  authorId  Int
  author    User   @relation(fields: [authorId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  image    String
  blogs    Blog[]
}
